@model IEnumerable<MonthlyClaim>
@{
    ViewData["Title"] = "Dashboard";
    var userRole = Context.Session.GetString("Role");
    var userName = Context.Session.GetString("FirstName");
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body py-4">
                    <h1 class="h3 mb-2">@(userRole) Dashboard</h1>
                    <p class="text-muted mb-0">Welcome to the Contract Monthly Claim System (CMCS).</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    @if (userRole == "Lecturer")
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <a href="/Claims/Submit" class="btn btn-success btn-lg w-100 py-3">
                    <i class="fas fa-plus-circle me-2"></i>Submit New Claim
                </a>
            </div>
            <div class="col-md-6">
                <a href="/Claims/UploadDocument" class="btn btn-primary btn-lg w-100 py-3">
                    <i class="fas fa-upload me-2"></i>Upload Document
                </a>
            </div>
        </div>

        <!-- Recent Claims -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Recent Claims</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No claims submitted yet.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Claim ID</th>
                                            <th>Month</th>
                                            <th>Amount</th>
                                            <th>Submitted</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var claim in Model)
                                        {
                                            <tr>
                                                <td>#@claim.Id</td>
                                                <td>@claim.ClaimMonth.ToString("MMM yyyy")</td>
                                                <td>$@claim.TotalAmount.ToString("N2")</td>
                                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                                <td>
                                                    <span class="badge status-badge bg-warning">@claim.Status</span>
                                                </td>
                                                <td>
                                                    <a href="/Claims/Details/@claim.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userRole == "Coordinator")
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-tasks me-2"></i>Claims for Review</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                <p class="text-muted">No claims pending review.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Claim ID</th>
                                            <th>Lecturer Name</th>
                                            <th>Date Submitted</th>
                                            <th>Total Amount</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var claim in Model)
                                        {
                                            <tr>
                                                <td>#@claim.Id</td>
                                                <td>@(claim.Lecturer?.FirstName ?? "Unknown") @(claim.Lecturer?.LastName ?? "Lecturer")</td>
                                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                                <td>$@claim.TotalAmount.ToString("N2")</td>
                                                <td>
                                                    <span class="badge status-badge bg-warning">Pending Review</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <form method="post" action="/Claims/ApproveAsCoordinator" class="d-inline">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <input type="hidden" name="isApproved" value="true" />
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-check me-1"></i>Approve
                                                            </button>
                                                        </form>
                                                        <form method="post" action="/Claims/ApproveAsCoordinator" class="d-inline">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <input type="hidden" name="isApproved" value="false" />
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-times me-1"></i>Reject
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userRole == "Manager")
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"><i class="fas fa-check-circle me-2"></i>Claims for Approval</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                <p class="text-muted">No claims pending approval.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Claim ID</th>
                                            <th>Lecturer Name</th>
                                            <th>Date Submitted</th>
                                            <th>Total Amount</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var claim in Model)
                                        {
                                            <tr>
                                                <td>#@claim.Id</td>
                                                <td>@(claim.Lecturer?.FirstName ?? "Unknown") @(claim.Lecturer?.LastName ?? "Lecturer")</td>
                                                <td>@claim.SubmittedDate.ToString("dd MMM yyyy")</td>
                                                <td>$@claim.TotalAmount.ToString("N2")</td>
                                                <td>
                                                    <span class="badge status-badge bg-info">Pending Approval</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <form method="post" action="/Claims/ApproveAsManager" class="d-inline">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <input type="hidden" name="isApproved" value="true" />
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-check me-1"></i>Approve
                                                            </button>
                                                        </form>
                                                        <form method="post" action="/Claims/ApproveAsManager" class="d-inline">
                                                            <input type="hidden" name="claimId" value="@claim.Id" />
                                                            <input type="hidden" name="isApproved" value="false" />
                                                            <button type="submit" class="btn btn-sm btn-danger">
                                                                <i class="fas fa-times me-1"></i>Reject
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>