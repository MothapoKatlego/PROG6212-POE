@{
    ViewData["Title"] = "Generate Payment Report";
    var currentYear = DateTime.Now.Year;
    var currentMonth = DateTime.Now.Month;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body py-4">
                    <h1 class="h3 mb-2">Generate Payment Report</h1>
                    <p class="text-muted mb-0">Generate comprehensive reports for payment processing and analytics.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-cog me-2"></i>Report Parameters</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="GenerateReport">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="year" class="form-label">Year</label>
                                    <select id="year" name="year" class="form-select" required>
                                        @for (int y = currentYear - 2; y <= currentYear + 1; y++)
                                        {
                                            <option value="@y" selected="@(y == currentYear)">@y</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="month" class="form-label">Month</label>
                                    <select id="month" name="month" class="form-select" required>
                                        @for (int m = 1; m <= 12; m++)
                                        {
                                            <option value="@m" selected="@(m == currentMonth)">
                                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="status" class="form-label">Filter by Status (Optional)</label>
                            <select id="status" name="status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="Submitted">Submitted</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-file-export me-2"></i>Generate Report
                            </button>
                            <a href="/Claims/Dashboard" class="btn btn-secondary btn-lg">Back to Dashboard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0"><i class="fas fa-info-circle me-2"></i>Report Types</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6><i class="fas fa-file-invoice-dollar text-success me-2"></i>Payment Report</h6>
                        <p class="text-muted small">Complete list of all claims for payment processing.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="fas fa-chart-bar text-primary me-2"></i>Analytics Report</h6>
                        <p class="text-muted small">Summary statistics and trends analysis.</p>
                    </div>
                    <div class="mb-3">
                        <h6><i class="fas fa-users text-info me-2"></i>Lecturer Report</h6>
                        <p class="text-muted small">Claims breakdown by individual lecturers.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>